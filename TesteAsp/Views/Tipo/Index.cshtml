@model IEnumerable<TesteAsp.Models.Tipo>
@using TesteAsp.Classes;

@{
    ViewBag.Title = "Tipos";
}

<h2>Tipos</h2>

<p>
   @Html.ActionLink("Criar", "Create", new { }, ButtonsHelper.buttonNew())
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UM.unidade)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TipoId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UM.unidade)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TipoId }, ButtonsHelper.buttonEdit()) 
            @Html.ActionLink("Details", "Details", new { id=item.TipoId }, ButtonsHelper.buttonDetails()) 
            @Html.ActionLink("Delete", "Delete", new { id=item.TipoId }, ButtonsHelper.buttonDelete())
        </td>
    </tr>
}

</table>
